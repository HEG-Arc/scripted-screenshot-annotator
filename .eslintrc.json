{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2017
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double",
            { "avoidEscape": true }
        ],
        "semi": [
            "error",
            "always"
        ]
    },
    "globals": {
        "addOverlay": false,
        "destroyOverlay": false,
        "addArrow": false,
        "addArrowToSelector": false,
        "addHighlightToSelector": false,
        "addBorderToSelector": false
    }
}